@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>

    <style>
        body {
            background-color: #e6e6e6; /* gris suave */
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 380px;
            margin: 70px auto;
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            text-align: center;
        }

        h2 {
            margin-bottom: 25px;
            font-weight: 700;
            color: #000; /* negro */
        }

        .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        label {
            font-size: 14px;
            font-weight: 600;
            color: #000; /* negro */
        }

        input[type="text"], input[type="password"] {
            width: 100%;
            height: 35px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
            background-color: #f8faff; /* celeste MUY suave */
        }

        .remember {
            display: flex;
            align-items: center;
            gap: 5px;
            margin-top: 5px;
            color: #000;
        }

        .btn-login {
            width: 100%;
            margin-top: 15px;
            background-color: #0057ff; /* azul */
            color: white;
            border: none;
            padding: 10px;
            border-radius: 6px;
            font-size: 15px;
            cursor: pointer;
            font-weight: 600;
        }

        .btn-login:hover {
            background-color: #003bb3;
        }

        .extra-links {
            margin-top: 12px;
            font-size: 14px;
            color: #000;
        }

        .extra-links a {
            color: #FFD000; /* amarillo */
            font-weight: 600;
            text-decoration: none;
        }

        .extra-links a:hover {
            text-decoration: underline;
        }

    </style>
</head>

<body>

    <div class="login-container">
        <h2>Sign In</h2>

        @if (ViewBag.Error != null)
        {
            <div style="background-color:#ffdddd; border-left:4px solid red; padding:8px; margin-bottom:10px;">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label>User Name</label>
                <input type="text" name="UserName" required />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password" required />
            </div>

            <div class="remember">
                <input type="checkbox" />
                <span>Remember me</span>
            </div>

            <button class="btn-login" type="submit">Sign In</button>

            <div class="extra-links">
                ¿No tienes cuenta?
                <a href="/Account/Register">Sign Up</a>
            </div>
        </form>
    </div>

</body>
</html>
